{% block javascripts %}
    <script src="{{ asset('build/hero-loader.js') }}"></script>
{% endblock %}

<div class="container-fluid hotstatus-container">
    <div class="row">
        <div class="col">
            {% block filter %}{% endblock %}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-md-3 col-lg-3 padding-sm-right-0 heroloader-container-herodata">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col">
                            <div class="dev-row-a"><img id="hl-herodata-image-hero" src=""></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="dev-row-b"><span id="hl-herodata-name">{NAME}</span></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="dev-row-a"><span id="hl-herodata-title">{TITLE}</span></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="dev-row-b"><span id="hl-herodata-desc-tagline">{TAGLINE}</span></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="dev-row-a"><span id="hl-herodata-desc-bio">{BIO}</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-8 col-md-9 col-lg-6 padding-sm-left-0 padding-lg-right-0 heroloader-container-talents">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col">
                            <div class="dev-row-a">Talents</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="dev-row-b">Talent Builds</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 padding-lg-left-0 heroloader-container-stats">
            <div class="row">
                <div class="col">
                    <div class="dev-row-b">
                        <a
                                data-toggle="collapse"
                                data-target="#average_stats"
                                class="heroloader-toggle d-lg-none collapsed"></a>
                         Average Stats
                    </div>
                </div>
            </div>
            <div id="average_stats" class="collapse">
                <div class="row">
                    <div class="col">
                        <div class="dev-row-a">
                            {% block group_average_stats %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <div class="dev-row-a">Graphs</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="dev-row-b">Data Table Foes Matchup</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="dev-row-a">Data Table Friends Matchup</div>
                </div>
            </div>
        </div>
    </div>
</div>