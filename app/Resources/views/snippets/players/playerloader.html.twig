{% block javascripts %}
    <script src="{{ asset('build/player-loader.js') }}"></script>
{% endblock %}

<div id="playerloader-container" class="initial-load container-fluid hotstatus-container">
    <div class="row">
        <div class="col">
            {# Top Row #}
            {% block filter %}{% endblock %}
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    {# Left Pane #}
                    {# Player Summary #}
                    <div class="hotstatus-subcontainer">
                        {% block player_summary %}{% endblock %}
                    </div>
                    <div class="hotstatus-subcontainer">

                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="row">
                <div class="col text-center">
                    {# Right Pane #}
                    <div id="pl-recentmatches-loader"></div>
                    <div id="pl-recentmatches-container" class="pl-recentmatches-container hotstatus-subcontainer horizontal-scroller">{# PLAYERLOADER GENERATED #}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {# Bottom Row #}
        </div>
    </div>
</div>