{% block javascripts %}
    <script src="{{ asset('build/player-loader.js') }}"></script>
{% endblock %}

{% block player_tab_index %}{% endblock %}
<div id="playerloader-container" class="container-fluid hotstatus-container padding-top-7">
    <div class="row">
        <div class="col">
            {% block announcement %}{% endblock %}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {# Top Row #}
            {% block filter %}{% endblock %}
        </div>
    </div>
    <div class="row initial-load">
        <div class="col">
            <div class="row">
                <div class="col text-left overflow-x-auto">
                    {# Left Pane TOP #}
                    <div class="player-leftpane-block padding-top-5">
                        <div id="player-leftpane-container" class="player-leftpane player-leftpane-container">
                            {# Player Summary #}
                            <div class="hotstatus-subcontainer margin-bottom-spacer-1">
                                {% block player_summary %}{% endblock %}
                            </div>
                            <div id="pl-mmr-container-frame">{# MMR PLAYERLOADER GENERATED #}</div>
                            <div id="pl-topheroes-container-frame">{# Top Heroes PLAYERLOADER GENERATED #}</div>
                        </div>
                    </div>
                    {# Left Pane MID #}
                    <div class="player-leftpane-block">
                        <div id="player-leftpane-mid-container" class="player-leftpane player-leftpane-mid-container">
                            {# TpP Maps PLAYERLOADER GENERATED #}
                        </div>
                    </div>
                    {# Left Pane BOT #}
                    <div class="player-leftpane-block">
                        <div id="player-leftpane-bot-container" class="player-leftpane player-leftpane-bot-container">
                            {# Parties PLAYERLOADER GENERATED #}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="row margin-bottom-spacer-1">
                <div class="col text-center">
                    {# Right Pane #}
                    <div id="player-rightpane-container" class="player-rightpane-container">
                        <div id="pl-recentmatches-loader"></div>
                        {# Recent Matches PLAYERLOADER GENERATED #}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="hotstatus-subcontainer">
                        {% block social_integration %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {# Bottom Row #}
            <div class="text-center">
                {% block advertising_horizontal_responsive_01 %}{% endblock %}
            </div>
        </div>
    </div>
</div>