{% extends 'base.html.twig' %}

{# Include snippets and then alias their blocks so as to order them as needed #}
{% use ':snippets:stdassets.html.twig' with javascripts as stdjavascripts, stylesheets as stdstylesheets %}

{# Append to title #}
{% block title %}
: Contact
{% endblock %}

{# Inject dynamic content variables #}
{% block dynamicVariables %}
{% endblock %}

{# Custom styling that require the use of path generation #}
{% block style %}
{% endblock %}

{% block body %}
    {# Begin HTML #}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="text-center">
                    {% include ':snippets:advertising/responsive_horizontal.html.twig' %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-2"></div>
            <div class="col-sm-12 col-md-12 col-xl-8">
                <div class="hotstatus-container">
                    <div class="contact-container hotstatus-subcontainer">
                        <div>
                            Email: <a class="email" href="mailto:contact@hotstat.us">contact@hotstat.us</a>!
                        </div>
                        <br>
                        <div>
                            For general questions, please prefix the subject line with "<b>Question:</b>", if your questions are well formed and aren't answered in the <a class="link" href="{{ path("faq") }}">F.A.Q.</a> then they will be added! I will try to answer questions frequently.
                        </div>
                        <br>
                        <div>
                            For bug reports, please prefix the subject line with "<b>Bug Report:</b>", any amount of details are appreciated!
                        </div>
                        <br>
                        <div>
                            For feature requests, please prefix the subject line with "<b>Feature Request:</b>".
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2">
                {% include ':snippets:advertising/responsive_vertical.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

{# Stylesheets #}
{% block stylesheets %}
    {{ block('stdstylesheets') }}
{% endblock %}

{# Javascript #}
{% block javascripts %}
    {{ block('stdjavascripts') }}
{% endblock %}

{# Tail Javascript #}
{% block tailJavascript %}
{% endblock %}

