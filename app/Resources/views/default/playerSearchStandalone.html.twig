{% extends 'base.html.twig' %}

{# Include snippets and then alias their blocks so as to order them as needed #}
{% use ':snippets:stdassets.html.twig' with javascripts as stdjavascripts, stylesheets as stdstylesheets %}
{#% use ':snippets:rankings/rankingsloader.html.twig' with javascripts as rankingsloaderjavascripts %#}

{# Append to title #}
{% block title %}
    : Search for Player
{% endblock %}

{# Inject dynamic content variables #}
{% block dynamicVariables %}
{% endblock %}

{# Custom styling that require the use of path generation #}
{% block style %}
{% endblock %}

{% block body %}
    {# Begin HTML #}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="text-center">
                    {% include ':snippets:advertising/responsive_horizontal.html.twig' %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-2"></div>
            <div class="col-12 col-xl-8">
                <div class="playerSearch-container">
                    <div class="hotstatus-container playerSearch-centerAll">
                        <div class="player-search-inner">
                            <form class="form-inline my-2 my-lg-0" method="post" action="{{ path('playerSearch') }}">
                                <input name="search" class="hotstatus-playersearchstandalone-textbox" type="text" placeholder="Enter Player Name..." aria-label="Search by Player Name">
                                <button class="btn my-2 my-sm-0 player-search-standalone-btn" type="submit"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
                            </form>
                            <div class="player-search-help">
                                Search for a player using their game name (EX: Miller),or a complete battletag (EX: Miller#1212).
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2">
                {% include ':snippets:advertising/responsive_vertical.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

{# Stylesheets #}
{% block stylesheets %}
    {{ block('stdstylesheets') }}
{% endblock %}

{# Javascript #}
{% block javascripts %}
    {{ block('stdjavascripts') }}
    {#{ block('rankingsloaderjavascripts') }#}
{% endblock %}

{# Tail Javascript #}
{% block tailJavascript %}
{% endblock %}

